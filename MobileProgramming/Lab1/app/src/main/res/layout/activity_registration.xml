<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="16dp">

		<Button
			android:id="@+id/btnBack"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Назад"
			android:layout_gravity="left"
			android:layout_marginTop="16dp"/>

		<EditText
			android:id="@+id/etFullName"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Введите ФИО"
			android:layout_marginTop="8dp" />

		<RadioGroup
			android:id="@+id/rgGender"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:paddingTop="8dp">

			<RadioButton
				android:id="@+id/rbMale"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Мужской" />

			<RadioButton
				android:id="@+id/rbFemale"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Женский" />
		</RadioGroup>

		<Spinner
			android:id="@+id/spinnerCourse"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="8dp" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			android:paddingTop="8dp">

			<TextView
				android:id="@+id/tvDifficultyLabel"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Сложность:" />

			<TextView
				android:id="@+id/tvDifficultyValue"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="0"
				android:paddingStart="8dp"/>
		</LinearLayout>

		<SeekBar
			android:id="@+id/seekBarDifficulty"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:max="5" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:paddingTop="8dp">

			<TextView
				android:id="@+id/tvBirthDate"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="Выберите дату рождения"
				android:textSize="16sp" />

			<Button
				android:id="@+id/btnSelectDate"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Выбрать" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			android:paddingTop="8dp">

			<TextView
				android:id="@+id/tvSpeedLabel"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Скорость:" />

			<TextView
				android:id="@+id/tvSpeedValue"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="5"
				android:paddingStart="8dp"/>
		</LinearLayout>

		<SeekBar
			android:id="@+id/sbSpeed"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:min="1"
			android:max="10"
			android:progress="5" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			android:paddingTop="8dp">

			<TextView
				android:id="@+id/tvMaxCockroachesLabel"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Макс. тараканов:" />

			<TextView
				android:id="@+id/tvMaxCockroachesValue"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="10"
				android:paddingStart="8dp"/>
		</LinearLayout>

		<SeekBar
			android:id="@+id/sbMaxCockroaches"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:min="5"
			android:max="20"
			android:progress="10" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			android:paddingTop="8dp">

			<TextView
				android:id="@+id/tvBonusIntervalLabel"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Интервал бонусов:" />

			<TextView
				android:id="@+id/tvBonusIntervalValue"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="30"
				android:paddingStart="8dp"/>
		</LinearLayout>

		<SeekBar
			android:id="@+id/sbBonusInterval"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:min="10"
			android:max="60"
			android:progress="30" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			android:paddingTop="8dp">

			<TextView
				android:id="@+id/tvRoundDurationLabel"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Длительность раунда:" />

			<TextView
				android:id="@+id/tvRoundDurationValue"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="60"
				android:paddingStart="8dp"/>
		</LinearLayout>

		<SeekBar
			android:id="@+id/sbRoundDuration"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:min="30"
			android:max="120"
			android:progress="60" />

		<Button
			android:id="@+id/btnSubmit"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Зарегистрироваться"
			android:layout_marginTop="8dp" />

		<TextView
			android:id="@+id/tvResult"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="16sp"
			android:paddingTop="10dp"
			android:text="Результат появится здесь" />

		<ImageView
			android:id="@+id/ivZodiac"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:layout_gravity="center"
			android:src="@drawable/ic_unknown"
			android:layout_marginTop="8dp" />

	</LinearLayout>
</ScrollView>