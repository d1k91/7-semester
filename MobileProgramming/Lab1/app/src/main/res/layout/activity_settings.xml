<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Назад" />

    <TextView android:text="Скорость игры" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <SeekBar android:id="@+id/sbSpeed" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tvSpeedValue" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView android:text="Макс. количество тараканов" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <SeekBar android:id="@+id/sbMaxCockroaches" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tvMaxValue" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView android:text="Интервал бонусов (сек)" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <SeekBar android:id="@+id/sbBonusInterval" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tvBonusValue" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView android:text="Длительность раунда (сек)" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <SeekBar android:id="@+id/sbRoundDuration" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tvRoundValue" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

</LinearLayout>